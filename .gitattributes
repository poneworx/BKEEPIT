# Auto-detect text files and normalize line endings
* text=auto

# Explicit line ending rules
*.sh text eol=lf
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.md text eol=lf

# Keep images and binaries untouched
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.svg binary
*.ico binary
*.pdf binary
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary

# Ignore generated logs and lockfiles from normalization
package-lock.json -text
yarn.lock -text
