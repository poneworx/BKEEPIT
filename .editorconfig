# EditorConfig helps maintain consistent coding styles across editors and IDEs
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Windows PowerShell scripts
[*.ps1]
end_of_line = crlf
charset = utf-8
indent_style = space
indent_size = 2

# JSON, YAML, Markdown
[*.{json,yml,yaml,md}]
indent_style = space
indent_size = 2
insert_final_newline = true

# JavaScript, TypeScript, and React files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
insert_final_newline = true
end_of_line = lf
charset = utf-8

# HTML, CSS
[*.{html,css,scss}]
indent_style = space
indent_size = 2
insert_final_newline = true

# Disable trimming for Markdown to preserve deliberate spacing
[*.md]
trim_trailing_whitespace = false
